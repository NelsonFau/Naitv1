@model Naitv1.Models.RegistroEmail
@{
    ViewData["Title"] = "Formulario Reporte";
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Reporte</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CrearCrearRegistroEmailManual" asp-controller="Reporte" method="post">
                        <div class="mb-3">
                            <label asp-for="Destinatario" class="form-label">Destinatario</label>
                            <input asp-for="Destinatario" class="form-control" />
                            <span asp-validation-for="Destinatario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Asunto" class="form-label">Asunto</label>
                            <input asp-for="Asunto" class="form-control" />
                            <span asp-validation-for="Asunto" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="FechaProgramada" class="form-label">Fecha</label>
                            <input asp-for="FechaProgramada" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FechaProgramada" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-success w-100">Enviar reporte</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
