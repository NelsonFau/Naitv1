@{
    ViewData["Title"] = "Vista previa del gráfico";
}

<h2>Reporte Semanal</h2>
<canvas id="graficoKpis" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('graficoKpis').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Usuarios', 'Ventas', 'Actividades'],
            datasets: [{
                label: 'KPIs',
                data: [124, 3200, 57],
                backgroundColor: [
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)'
                ]
            }]
        }
    });

    // Esperar un segundo para que el gráfico se dibuje
    setTimeout(() => {
        const base64Image = document.getElementById('graficoKpis').toDataURL('image/png');

        fetch('/Reporte/SubirGraficoBase64', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ base64: base64Image })
        }).then(res => {
            if (res.ok) {
                alert("Gráfico enviado al servidor ✔️");
            }
        });
    }, 1000);
</script>
